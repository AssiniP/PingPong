        {{#usuarioInfo}}
            <h1 class="text-gray-500 text-3xl mb-5 md:mb-20 uppercase">{{nickName}}</h1>
        {{/usuarioInfo}}
        {{#usuarioJuego}}
            <h2 class="text-gray-500 text-3xl mb-2 md:mb-20">{{puntaje}} Puntos</h2>
        {{/usuarioJuego}}
