{{> header}}
<div class="flex flex-col justify-center items-center justify-items-center">



 <div class="lobby-container mt-10 w-full">
    <div class="lobby-user">
        <h1 class="text-orange-700 text-3xl mb-10 uppercase">Ranking</h1>

    </div>
    <div class="grid grid-cols-1 mb-5 w-full md:w-3/5">
     {{#usuario}}

         <div class=" flex flex-row  bg-orange-200 gap-2 text-center rounded-2xl m-2">
             <h1 class="text-center text-white  text-2xl bg-orange-700 h-full p-2 rounded-l-2xl">{{Puesto}}</h1>
             <div class="flex flex-row items-center justify-center w-full">
                 <div class="flex flex-col items-center">
                 <img src="/public/foto-perfil/{{imagenPerfil}}" alt="perfil" class="rounded-full w-8 h-8 md:w-16 md:h-16">
                 <h2 class="text-xl font-bold mt-2">{{nickName}}</h2>
                 </div>
             <div class="flex flex-col items-center mx-4">
                 <a href="/user/seeProfile&nick={{nickName}}" class="m-5"><img src="/public/qr-perfil/qr_code_{{nickName}}.png" class="w-18 h-18 md:w-28 md:h-28  rounded border border-yellow-400"></a>
             </div>
                 <p class="text-6xl mt-2 font-sans font-bold antialiased">{{Puntaje}}</p>
             </div>
         </div>
     {{/usuario}}
    </div>

</div>

</div>
<script>
    window.addEventListener("load", function() {
        var body = document.body;
        body.classList.add('body-lobby');
    });
</script>
