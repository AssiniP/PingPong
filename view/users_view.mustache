{{> headerUser}}
      <div class="flex flex-col justify-center items-center justify-items-center text-center text-green-700 bg-white p-5 w-full rounded ">
      <img src="../../public/img/logo-pingpong.png" alt="LOGO" class="h-20 w-20 m-auto">
        <h1 class="text-5xl text-center mb-10 font-bold md:text-xl">Perfil Usuario</h1>
      <form action="register/validateFields" method="POST" enctype="multipart/form-data" class="flex flex-col justify-center items-center justify-items-center text-center">
       {{#usuario}}
      <div class="flex flex-row md:grid-cols-1 justify-center items-center">
          <label for="nickName" class="mr-2">Nickname:</label>
          <input type="text" id="nickName" name="nickName"  value='{{nickName}}' class="rounded border border-2 border-green-300 h-4/5 mr-5 px-2" disabled><br><br>
                  <label for="nombre" class="mr-2 ml-2">Nombre:</label>
                    <input type="text" id="nombre" name="nombre" value='{{nombre}}' class="rounded border border-2 border-green-300 h-4/5 px-2" disabled><br>

                    <label for="email" class="mr-2 ml-2">Email:</label>
                    <input type="email" id="email" name="email"  value='{{email}}' class="rounded border border-2 border-green-300 h-4/5 px-2" disabled><br><br>

  </div>
    <div class="flex flex-row md:grid-cols-1  justify-center items-center">
              <label for="pais" class="mr-2 ml-2">País:</label>
              <input type="text" id="pais" name="pais"  value='{{pais}}' class="rounded border border-2 border-green-300 h-4/5 px-2" disabled><br><br>

              <label for="ciudad" class="mr-2 ml-2">Ciudad:</label>
              <input type="text" id="ciudad" name="ciudad"  value='{{ciudad}}' class="rounded border border-2 border-green-300 h-4/5 px-2" disabled><br><br>

            <label for="idGenero" class="mr-2 ml-2">Género:</label>
           <input type="text" id="genero" name="genero"  value='{{genero}}' class="rounded border border-2 border-green-300 h-4/5 px-2" disabled><br><br>
    </div>
  <div class="flex flex-row md:grid-cols-1  justify-center items-center">
  <img src='/public/foto-perfil/{{imagenPerfil}}' alt="FOTO" class="h-30 w-30 m-auto" id="imagenPerfil" name="imagenPerfil">

 <input type="text" id="ubicacion" name="ubicacion"  value='{{ubicacion}}' class="rounded border border-2 border-green-300 h-4/5 px-2" disabled><br><br>
    <div id="map-container" style="height: 400px;"></div>

   </div>
        {{/usuario}}
      </form>

      </div>